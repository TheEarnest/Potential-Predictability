is_revisiting_jobs=1
DIR=${OutputDIR}
#------------------------------------------------------------------------------
funcPath=${ScriptHome}/functions
LinnBreaker="--------------------------------------------------------"
DocPathName=`echo ${OutputDIR} | awk -F "/" '{print $NF}'`
DocPath=${funcPath}/../docs/${DocPathName}
