      #RegionN="Nino3"; RegLonLat="-150,-90,-5,5"
      #RegionN="AtlNino3"; RegLonLat="-20,-0,-3,3"
      #RegionN="SPG"; RegLonLat="300,345,48,65"
      #######################################################################
#      . ${funcPath}/ps_func_check_regional_sqr
